{
  "name": "@vueuse/monorepo",
  "version": "8.0.0-beta.3",
  "private": true,
  "description": "Collection of essential Vue Composition Utilities",
  "license": "MIT",
  "author": "Anthony Fu<https://github.com/antfu>",
  "scripts": {
    "build": "nr update && esno scripts/build.ts",
    "build:redirects": "esno scripts/redirects.ts",
    "build:rollup": "cross-env NODE_OPTIONS=\"--max-old-space-size=6144\" rollup -c",
    "build:types": "tsc --emitDeclarationOnly && nr types:fix",
    "clean": "rimraf dist types packages/*/dist",
    "dev": "nr update && nr docs",
    "docs": "vitepress dev packages",
    "docs:build": "nr update:full && vitepress build packages && nr build:redirects && esno scripts/post-docs.ts",
    "docs:serve": "vitepress serve packages",
    "lint": "eslint --ext=js,ts,tsx,vue,md,json .",
    "lint:fix": "nr lint --fix",
    "publish:ci": "esno scripts/publish.ts",
    "release": "esno scripts/release.ts && git push --follow-tags",
    "size": " esno scripts/export-size.ts",
    "test": "nr test:3",
    "test:2": "vue-demi-switch 2 vue2 && vitest run --silent",
    "test:3": "vue-demi-switch 3 && vitest run",
    "test:all": "nr test:3 && nr test:2 && vue-demi-switch 3",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "types:fix": "esno scripts/fix-types.ts",
    "update": "nr -C packages/metadata update && esno scripts/update.ts",
    "update:full": "nr update && nr build:types",
    "watch": "esno scripts/build.ts --watch"
  },
  "lint-staged": {
    "{packages,.vitepress,scripts,meta}/**/*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.16.1",
    "@antfu/ni": "^0.13.2",
    "@iconify/json": "^2.1.11",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/js-yaml": "^4.0.5",
    "@types/md5": "^2.3.2",
    "@types/node": "^17.0.21",
    "@types/prettier": "^2.4.4",
    "@types/semver": "^7.3.9",
    "@vitest/ui": "^0.5.9",
    "@vue/compiler-sfc": "^3.2.31",
    "@vue/composition-api": "^1.4.9",
    "@vue/test-utils": "^2.0.0-rc.18",
    "@vue/theme": "^1.0.1",
    "axios": "^0.26.0",
    "bumpp": "^7.1.1",
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.8",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.10.0",
    "eslint-plugin-markdown": "^1.0.2",
    "esno": "^0.14.1",
    "export-size": "^0.5.2",
    "fast-glob": "^3.2.11",
    "firebase": "^8.10.0",
    "fs-extra": "^10.0.1",
    "fuse.js": "^6.5.3",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.3.5",
    "markdown-table": "^3.0.2",
    "md5": "^2.3.0",
    "msw": "^0.38.2",
    "node-fetch": "^3.2.1",
    "ohmyfetch": "^0.4.15",
    "pnpm": "^6.32.2",
    "postcss": "^8.4.7",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.5.1",
    "prism-theme-vars": "^0.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.69.1",
    "rollup-plugin-dts": "^4.2.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "simple-git": "^3.2.6",
    "simple-git-hooks": "^2.7.0",
    "typescript": "4.5.5",
    "unocss": "^0.27.2",
    "unplugin-icons": "^0.13.2",
    "unplugin-vue-components": "^0.17.21",
    "vite": "^2.8.6",
    "vite-plugin-inspect": "^0.4.3",
    "vite-plugin-pwa": "^0.11.13",
    "vitepress": "^0.22.3",
    "vitest": "^0.5.9",
    "vue": "^3.2.31",
    "vue2": "npm:vue@^2.6.14"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "electron"
    ],
    "overrides": {
      "vue-demi": "0.12.1"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
