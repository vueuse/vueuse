{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
      "dom.iterable"
    ],
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./typings",
    "rootDir": "packages",
    "jsx": "preserve",
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "**/**/*.test.ts",
    "**/**/*.stories.tsx",
    "**/**/*.md",
    "packages/_docs",
    "src/api.*.ts"
  ]
}
