{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./types",
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve"
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "**/**/*.test.ts",
    "**/**/*.stories.tsx",
    "**/**/*.md",
    "packages/_docs",
    "packages/api.2.ts",
    "packages/api.3.ts"
  ]
}
